<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FÁCIL</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_Utili')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<body>
<%- include('./partials/Base_Logged')%>
<main class="utilizador flex-fill">
    <main>
        <div class="collorblack">
            <form action="/reserva/criar" method="post" class="formcreate">
                <h1>Criar Reserva</h1>
                <label class="col-lg-12 columnStyle p-3">Data </label><br>
                <input name="data" type="text" placeholder="Insira a pergunta" class="col-lg-12 columnStyle perguntainput">
                <br>
                <label class="col-lg-12 columnStyle p-3">Hora </label><br>
                <input name="hora" type="text" placeholder="Insira a resposta" class="col-lg-12 columnStyle respostainput">
                <br>
                <br>
                <label for="topic">Motorista</label>
                <select class="form-control" id="topic" name="Motorista">
                    <%udocs.forEach(function(udocs) {%>
                        <% if (udocs.tipo == 0){%>
                        <option value = "<%=udocs._id%>"><%=udocs.username%></option>
                        <% } %> 
                        <% });%>
                </select>
                <input name ="User" type="hidden" value="  %>">
                <label for="mobilidadeReduzida">Mobilidade Reduzida?</label>
                <select name ="mobilidadeReduzida">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <label for="acompanhante">Precisa de um Acompanhante?</label>
                <select name ="acompanhante">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <div class="container">
    
                    <div class="row">
                        <div class="criarconta divbutton">
                            <button id="btn_criarconta" type="submit" value="Submit">Criar Reserva</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</main>
<%-include('./partials/Footer')%>
</body>
</html>