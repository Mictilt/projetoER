<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>UMa Farmácia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_ticketsEspecifico')%>

</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
<%} %>
<main>
    <div class = "row">
        <div class="col">
        </div>
        <div class="col-6">
            <label class = "titulo">Titulo: </label><br>
            <div class = "tituloTicket">
                <span name = "title" id = "titleOpenTicket"><%= tickets.title %></span><br>
            </div>
            <label>Descricao: </label><br>
            <div class = "descricaoTicket">
                <span name = "description"><%= tickets.description %></span>
            </div><br>
            <form  <%if (tickets.state) {%>style="display: none;" <% }%>  action = "/tickets/ticketsEspecifico/<%=tickets._id%>" method="post">
                <label>Resposta: </label><br>
                <textarea name = "answers" class = "answers"></textarea><br><br>
                <button  value = "Submite">Enviar resposta</button>
            </form>
            <% if (tickets.state == false){ %>
            <button <%if(!isAuthenticated) {%> style="display: none;" <% }; %> id = "exampleModal">ir FAQ</button>
            <%}%>
        </div>
        <div class="col buttonsTicket">
            <div>
                <form action="/tickets/estadoTicket/<%=tickets._id%>" method="post">
                <% if (isAuthenticated){ %>
                <%if (tickets.state) {%>
                    <button>Abrir Ticket</button><br>
                    <input type="hidden" name="state" value = "false">
                <%} else {%>
                    <button>Fechar Ticket</button><br>
                    <input type="hidden" name="state" value = "true">
                    <%}%>
                <%}%>
                </form>
            </div>
        </div>
    </div>
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Criar FAQ</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <form action="/faq/create" method="post" class="formcreate">
                    <label class="col-lg-12 columnStyle p-3">Pergunta </label><br>
                    <input name="question" type="text" placeholder="Insira a pergunta" class="col-lg-12 columnStyle perguntainput">
                    <br>
                    <label class="col-lg-12 columnStyle p-3">Resposta </label><br>
                    <input name="answer" type="text" placeholder="Insira a resposta" class="col-lg-12 columnStyle respostainput">
                    <br>
                    <br>
                    <label for="topic">Tópico</label>
                    <select class="form-control" id="topic" name="topic">
                        <option value="questaogeral">Questão Geral</option>
                        <option value="medicacao">Medicação</option>
                        <option value="compras">Compras</option>
                    </select>
                    <label for="pinned">Pinned</label>
                    <select name ="pinned">
                        <option value="true">Sim</option>
                        <option value="false">Não</option>
                    </select>
                
            </div>
            <div class="modal-footer">
                <button id="btn_criarconta" type="submit" value="Submit">Criar FAQ</button> 
            </div>
            </form>
          </div>
        </div>
      </div>

</main>
<script>
        $("#exampleModal").click(function(){
            $(".modal").modal('show');
        });

        $(".btn-secondary, .close"). click(() => {
            $(".modal").modal('hide');
        });
</script>
<%-include('./partials/Footer')%>
</body>
</html>