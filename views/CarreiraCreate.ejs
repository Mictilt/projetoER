<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FACIL</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_FaqCreate')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
<%} %>
<main>
    <div class="collorblack">
        <form action="/carreira/create" method="post" class="formcreate">
            <h1>Criar Carrreira</h1>
            <label class="col-lg-12 columnStyle p-3">Nome </label><br>
            <input name="nome" type="text" placeholder="Insira nome carreira" class="col-lg-12 columnStyle perguntainput">
            <br>                        
            <input name ="User" type="hidden" value="<%=user.id%>">                    
            <div class="container">
                <div class="row">
                    <div class="criarconta divbutton">
                        <button id="btn_criarconta" type="submit" value="Submit">Criar Carreira</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<%-include('./partials/Footer')%>
</body>
</html>