<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FACIL</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_Login')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

<script>
    function verificarForm(event){
        var nameValue = $("#name").val();
        var passwordValue = $("#password").val();
        if (nameValue == ''){
            $("#validName").html("campo de utilizador vazio");
            $("#validName").css("background-color","red");
            if (passwordValue == ''){
                $("#validPassword").html("campo de palavra passe vazio");
                $("#validPassword").css("color","red");
                event.preventDefault();    
            }
            event.preventDefault();
        }
        else{
            
            
        }       
            
    }
</script>

<body>
<%- include('./partials/Base_Notlogged')%>
<main class="row">
    <form action="/login" method="post">
    <h1 class="col-lg-12 columnStyle">Entre na sua conta FACIL: </h1>
    <label class="col-lg-12 columnStyle p-3 " >Nome </label><br>
    <input id="name" name="username" type="text" placeholder="Insira o seu nome" class="col-lg-12  columnStyle">
    <span id="validName"></span>
    <br >
    <label class="col-lg-12 columnStyle p-3">Password </label><br>
    <input id="password" name="password" type="password" placeholder="Insira a sua password" class="col-lg-12 columnStyle ">
    <span id="validPassword"></span>
    <div class="entrarconta">
        <button class="btn_entarconta" type="submit" value="Submit" onclick="verificarForm(event)">Entrar Conta</button>
    </div>   
    <div class="singupb">
        <a class="singupa" href="/signup" target="_blank">Criar Utilizador</a>
    </div>
    
    </form>
    
    
</main>



<%-include('./partials/Footer')%>
</body>
</html>