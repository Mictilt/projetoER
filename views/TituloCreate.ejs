<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
    <main>
        <div class="collorblack">
            <form action="/titulo/create" method="post" class="formcreate">
                <h1>Criar Título de Transporte</h1>
                <label class="col-lg-12 columnStyle p-3">Nome do Passageiro </label><br>
                <input name="nome" type="text" placeholder="Insira nome título" class="col-lg-12 columnStyle perguntainput" value="<%=user.username%>" disabled="disabled">
                <br>
                <label class="col-lg-12 columnStyle p-3">Tipo </label><br>
                <!-- <input name="tipo" type="text" placeholder="Insira tipo título" class="col-lg-12 columnStyle perguntainput"> -->
                <select class="form-control" id="tipo" name="tipo" type="text" onchange="changeFunc();">
                    <option value="Passe">Passe</option>
                    <option value="Recarregamento">Recarregamento</option>
                </select>
                <br>
                <span id="quantidadeLabel" hidden="hidden" ><label class="col-lg-12 columnStyle p-3" >Quantidade </label><br></span>
                <input id="quantidade" name="quantidade" placeholder="quantidade" class="col-lg-12 columnStyle perguntainput" min="1" max="90" type="hidden">
                <br>                                                
                <input name ="estado" type="hidden" value="false">
                <input name ="User" type="hidden" value="<%=user.id%>">                    
                <div class="container">
                    <div class="row">
                        <div class="criarconta divbutton">
                            <button id="btn_criarconta" type="submit" value="Submit">Criar Título</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>



<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
    <main>
        <h1 style="padding-left: 10%;">É necessário autenticar-se para aceder a funcionalidade</h1>
        <div class="collorblack">
            <div style="padding-left: 50%;padding-top: 5%"; >
                <a href="/login"><button id="btn_criarconta" >Login</button></a>
            </div>
        </div>
    </main>
<%} %>

<%-include('./partials/Footer')%>
</body>
</html>