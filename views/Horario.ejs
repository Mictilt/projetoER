<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FACIL</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_Frequencia')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
<%} %>
<main>
<h3 class="paddingt paddingl">Horário</h3>
    <div class="accordion paddingl" id="accordionExample">
        <div class="card widthcard">
            <%horario.forEach(function (horario) {%>                                  
                <div class="card-header colapse" id="heading<%=num%>">
                    <h2 class="m-0">
                        <button class="btn btn-link btn-block text-left collapsed faqcollapse" type="button" data-toggle="collapse" data-target="#collapse<%=num%>" aria-expanded="true" aria-controls="collapse<%=num%>">
                            <%=horario.Carreira.nome%>
                            <%horario.frequencia.forEach(function (hora) {%>      
                                <%=hora%>
                                <% }); %>
                        </button>
                    </h2>
                </div>

                <div id="collapse<%=num%>" class="collapse" aria-labelledby="heading<%=num%>" data-parent="#accordionExample">
                    <div class="card-body faqcollapse">
                        //<%if (horario.Frequencia.hora < 10){%>0<%}%><%=horario.Frequencia.hora%>:<%if (horario.Frequencia.minutos < 10){%>0<%}%><%=horario.Frequencia.minutos%>
                        
                        </div>
                </div>
                <%num = num + 1%>
            
        <% }); %>
        </div>
    </div>
    <% if (isAuthenticated){ %>
    <div class="paddingt paddinglbutt paddingb">
    <a href="/horario/create"><button>Criar Horário</button></a>
    <a href="/horario/pool"><button>Ver Todos Os Horários</button></a>
    </div>
    <%} %>
</main>
<%-include('./partials/Footer')%>
</body>
</html>