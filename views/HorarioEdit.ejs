            <input name="minutos" type="text" value="<%=horario.Frequencia[0].minutos%>" placeholder="Insira a hora" class="col-lg-12 columnStyle perguntainput">           
            <input name ="User" type="hidden" value="<%=user.id%>">            
            <div class="container">
                <div class="row">
                    <div class="criarconta divbutton">
                        <button id="btn_criarconta" type="submit" value="Submit">Mudar Hor√°rio</button>
                    </div>
                </div>
            </div>
