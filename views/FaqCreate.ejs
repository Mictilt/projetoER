<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>UMa Farmácia</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_FaqCreate')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
<%} %>
<main>
    <div class="collorblack">
        <form action="/faq/create" method="post" class="formcreate">
            <h1>Criar FAQ</h1>
            <label class="col-lg-12 columnStyle p-3">Pergunta </label><br>
            <input name="question" type="text" placeholder="Insira a pergunta" class="col-lg-12 columnStyle perguntainput">
            <br>
            <label class="col-lg-12 columnStyle p-3">Resposta </label><br>
            <input name="answer" type="text" placeholder="Insira a resposta" class="col-lg-12 columnStyle respostainput">
            <br>
            <br>
            <label for="topic">Tópico</label>
            <select class="form-control" id="topic" name="topic">
                <option value="questaogeral">Questão Geral</option>
                <option value="medicacao">Medicação</option>
                <option value="compras">Compras</option>
            </select>
            <input name ="User" type="hidden" value="<%=user.id%>">
            <label for="pinned">Pinned</label>
            <select name ="pinned">
                <option value="true">Sim</option>
                <option value="false">Não</option>
            </select>
            <div class="container">

                <div class="row">
                    <div class="criarconta divbutton">
                        <button id="btn_criarconta" type="submit" value="Submit">Criar FAQ</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<%-include('./partials/Footer')%>
</body>
</html>