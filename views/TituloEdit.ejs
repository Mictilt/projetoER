<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>FACIL</title>
    <%- include('./partials/Style')%>
    <%- include('./partials/Style_FaqCreate')%>
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

<script>
    function verificarForm(event){
        var tipoValue = $("#tipo option:selected").text();
        if (tipoValue == "Passe"){
            $("#quantidade").val("null");
            alert("Quantidade nula com opção Passe");            
                
        }
        else{
            
            //event.preventDefault();
        }       
            
    }
</script>

<body>
<% if (isAuthenticated){ %>
    <%- include('./partials/Base_Logged')%>
<%} else{%>
    <%-include('./partials/Base_Notlogged')%>
<%} %>
<main>
    <div class="collorblack">
        <form action="/titulo/edit/<%=titulo._id%>" method="post" class="formcreate">
            <h1>Editar titulo</h1>            
            <label class="col-lg-12 columnStyle p-3">Tipo </label><br>
            <%=titulo.tipo%>
            <select id="tipo" name="tipo" id="">
                <%if(titulo.tipo == "Passe"){%>
                    <option value="Passe">Passe</option>
                    <option value="Recarregamento">Recarregamento</option>
                    <%}else{%>
                        <option value="Recarregamento">Recarregamento</option>
                        <option value="Passe">Passe</option>                    
                    <%}%>
            </select>
            <br><br><br>
            <label class="col-lg-12 columnStyle p-3">Quantidade </label><br>
            <input id="quantidade" name="quantidade" type="number" value="<%=titulo.quantidade%>" placeholder="Insira a quantidade" class="col-lg-12 columnStyle perguntainput">                       
            <input name ="User" type="hidden" value="<%=user.id%>">            
            <div class="container">
                <div class="row">
                    <div class="criarconta divbutton">
                        <button id="btn_criarconta" type="submit" value="Submit" onclick="verificarForm(event)">Mudar Titulo</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>
<%-include('./partials/Footer')%>
</body>
</html>